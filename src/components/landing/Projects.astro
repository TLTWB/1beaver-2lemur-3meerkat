---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
  {
    "url": "https://tltwb.com/Wealth",
    "title": "Wealth",
    "description": "The top 10% of US households hold 67% of the total wealth in America, the top 1% own 31% of the assets in America. A society that hoards wealth while others starve on the street is not a society at all, it is a playground for the rich."
  },
  {
    "url": "https://tltwb.com/Aid",
    "title": "Mutual Aid",
    "description": "The only strength we have in times like these are other like-minded individuals who can share information, knowledge, and provide support to our ideals and actions."
  },
  {
    "url": "https://tltwb.com/Freedom",
    "title": "Freedom",
    "description": "Our freedom's are being stripped away, from our freedom of speech to our freedom of choice this is no longer a free America by any stretch of the imagination."
  },
  {
    "url": "https://tltwb.com/Action",
    "title": "Action",
    "description": "Those who make peaceful revolution impossible, make violent revolution inevitable. Peaceful protests have proven ineffective and it is time that real action is taken."
  }
  // Add more projects as needed...
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>Main</span>
        <span class="font-bold">ideals</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1  sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-32"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full "
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-3xl  mt-3 leading-9 indent-9">
                    {project.description}
                  </p>
                </div>
                
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
